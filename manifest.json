{

  "description": "Creates and exchanges blind tokens with Cloudflare servers to bypass CAPTCHAs",
  "manifest_version": 2,
  "name": "captcha bypass extension",
  "version": "0.1",
  "icons": {
    "48": "icons/person-48.png"
  },

  "applications": {
    "gecko": {
      "id": "crypto@cloudflare.com",
      "strict_min_version": "45.0"
    }
  },

  "background": {
    "scripts": [
        "scripts/sjcl.js",
        "scripts/crypto.js",
        "scripts/tokens.js",
        "scripts/background.js"
    ]
    //"persistent": false
  },

//  "content_scripts": [
//    {
//      "matches": ["<all_urls>"],
//      "js": ["scripts/content.js"],
//      "run_at": "document_end"
//    }
//  ],

  "permissions": [
    "alarms",
    "<all_urls>",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],

  "browser_action": {
    "default_icon": "icons/person-32.png",
    "default_title": "captcha bypass extension",
    "default_popup": "popup/bc-plugin.html"
  }

}
