{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "noEmitOnError": true,
        "target": "es2020",
        "jsx": "react",
        "allowJs": true,
        "removeComments": true,
        "module": "es2020",
        "moduleResolution": "node",
        "paths": {
            "@root/*": ["./*"],
            "@public/*": ["./public/*"],
            "@background/*": ["./src/background/*"],
            "@popup/*": ["./src/popup/*"]
        }
    }
}
